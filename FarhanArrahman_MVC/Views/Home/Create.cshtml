@model IEnumerable<Pegawai>

@{
    ViewData["Title"] = "Daftar Pegawai";
}

<h1>Daftar Pegawai</h1>

<p>
    <a asp-action="Pegawai"><= Kembali</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nama)
        </th>
        <td>
            <input type="text" id="nama" name="nama">
        </td>
    </tr>
    <tr>
        <th>
            Tempat Lahir
        </th>
        <td>
            <input type="text" id="tmptlahir" name="tmptlahir">
        </td>
    </tr>
    <tr>
        <th>
            Tanggal Lahir
        </th>
        <td>
            <input type="date" id="tgllahir" name="tgllahir">
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <td>
            <label for="radiol">Laki-Laki</label>
            <input type="radio" id="radiol" name="radiol" value='L'>
        </td>
        <td>
            <label for="radiop">Perempuan</label>
            <input type="radio" id="radiop" name="radiop" value='P'>
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Agama)
        </th>
        <td>
            <select name="agama" id="agama">
                <option value="Islam">Islam</option>
                <option value="Protestan">Protestan</option>
                <option value="Katolik">Katolik</option>
                <option value="Hindu">Hindu</option>
                <option value="Buddha">Buddha</option>
                <option value="Konghucu">Konghucu</option>
            </select>
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Alamat)
        </th>
        <td>
            <textarea id="alamat" name="alamat"></textarea>
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <td>
            <input type="text" id="email" name="email">
        </td>
    </tr>
    <tr>
        <th>
            Nomor Handphone
        </th>
        <td>
            <input type="text" id="nohp" name="nohp">
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <td>
            <input type="text" id="foto" name="foto"> (.jpeg/jpg/png)
        </td>
</tr>
</table>

<p>
    <a asp-action="Create">Daftar</a>
</p>
